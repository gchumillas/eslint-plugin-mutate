{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./", "node_modules/@types"],
    "types": []
  },
  "include": [
    "index.d.ts",
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
